<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.beraaksoy.spotifystreamer">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.beraaksoy.spotifystreamer.ArtistSearchActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.beraaksoy.spotifystreamer.TopTracksActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/toptentracks_label">

        </activity>
        <activity
            android:theme="@android:style/Theme.Holo.DialogWhenLarge"
            android:configChanges="orientation|screenSize"
            android:name="com.beraaksoy.spotifystreamer.PlaybackActivity"
            android:label="@string/app_name">

        </activity>

    </application>

</manifest>
