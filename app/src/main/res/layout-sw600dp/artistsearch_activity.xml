<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="5"
    tools:context=".MainActivity">


    <fragment
        android:id="@+id/fragment1"
        android:name="com.beraaksoy.spotifystreamer.ArtistSearchFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/artistsearch_fragment" />

    <fragment
        android:id="@+id/fragment2"
        android:name="com.beraaksoy.spotifystreamer.TopTracksFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        tools:layout="@layout/toptracks_fragment" />


</LinearLayout>
